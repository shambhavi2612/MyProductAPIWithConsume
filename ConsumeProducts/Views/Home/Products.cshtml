                                        @model IEnumerable<ConsumeProducts.Models.Product>

@{
    ViewData["Title"] = "PRODUCTS LIST";
}

<style>
    .products-heading {
        text-align: center;
        margin: 20px 0;
        font-size: 2em;
        color: #333;
    }

    .product-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
    }

        .product-table th, .product-table td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }

        .product-table th {
            background-color: #f8f9fa;
        }

        .product-table img {
            max-width: 100px;
        }

    .no-products {
        text-align: center;
        font-size: 1.2em;
        color: #666;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col">
            <h2 class="products-heading">PRODUCTS LIST</h2>

            @if (Model == null || !Model.Any())
            {
                <p class="no-products">No products available.</p>
            }
            else
            {
                <table class="table product-table table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">@Html.DisplayNameFor(model => model.First().Id)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.First().Name)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.First().Description)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.First().Price)</th>
                            <th scope="col">Photo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.GetBase64Image()))
                                    {
                                        <img src="@item.GetBase64Image()" alt="Product Photo" />
                                    }
                                    else
                                    {
                                        <span>No photo available</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
